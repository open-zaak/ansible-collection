# General Django settings
- name: DJANGO_SETTINGS_MODULE
  value: nrc.conf.docker
- name: ALLOWED_HOSTS
  value: "localhost,{{ opennotificaties_domain }}"
- name: SECRET_KEY
  valueFrom:
    secretKeyRef:
      name: opennotificaties-secrets
      key: SECRET_KEY

# Database settings
- name: DB_HOST
  value: "{{ opennotificaties_db_host }}"
- name: DB_NAME
  value: "{{ opennotificaties_db_name }}"
- name: DB_PORT
  value: "{{ opennotificaties_db_port }}"
- name: DB_USER
  value: "{{ opennotificaties_db_username }}"
- name: DB_PASSWORD
  valueFrom:
    secretKeyRef:
      name: opennotificaties-secrets
      key: DB_PASSWORD

# RabbitMQ
- name: RABBITMQ_HOST
  value: opennotificaties-rabbitmq
- name: RABBITMQ_PORT
  value: 5432
- name: PUBLISH_BROKER_URL
  valueFrom:
    secretKeyRef:
      name: opennotificaties-secrets
      key: PUBLISH_BROKER_URL
- name: CELERY_BROKER_URL
  valueFrom:
    secretKeyRef:
      name: opennotificaties-secrets
      key: CELERY_BROKER_URL
- name: CELERY_RESULT_BACKEND
  valueFrom:
    secretKeyRef:
      name: opennotificaties-secrets
      key: CELERY_RESULT_BACKEND

# Caches
- name: CACHE_DEFAULT
  value: "opennotificaties-cache:6379/{{ opennotificaties_cache_db }}"
- name: CACHE_AXES
  value: "opennotificaties-cache:6379/{{ opennotificaties_cache_db }}"

{% if opennotificaties_sentry_dsn %}
- name: SENTRY_DSN
  valueFrom:
    secretKeyRef:
      name: opennotificaties-secrets
      key: SENTRY_DSN
{% endif %}
